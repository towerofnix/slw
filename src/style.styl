@import 'normalize.css'

body {
  background black
  color white
}

canvas {
  image-rendering pixelated
  outline none

  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

  opacity 0.5
  cursor pointer

  &:focus {
    opacity 1
    cursor none
  }
}

main {
  width 100%
  height 100%
  overflow hidden
}

#controller {
  position fixed
  bottom 0
  width 100vw
}
